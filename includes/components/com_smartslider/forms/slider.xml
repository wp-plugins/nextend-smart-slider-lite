<?xml version="1.0" encoding="utf-8"?>
<config>
  <name>Slider Configuration XML</name>
  <params addPath="/administrator/components/com_smartslider/oldparams">
    <field name="update" type="offlajndashboard" label="-"/>
    <param name="name" type="offlajntext" default="" label="Slider Name" description="The name of the Slider"/>
    <param name="published" type="offlajnonoff" default="1" label="Published" description=""/>
    <param name="addslides" type="text" default="1" label="Add slides (number)" description=""/>
    <param name="random" type="offlajnonoff" default="0" label="Randomize slides" description=""/>
    <param name="cache" label="Cache" type="offlajncombine" default="0|*|1">
      <param type="offlajnonoff" label="Cache" />
      <param type="offlajntext" size="3" validation="int" scale="60" label="Expire">
        <unit>min</unit>
      </param>
    </param>
    
    <param name="responsive" type="offlajnonoff" default="0" label="Responsive mode" description=""/>
    <param name="css3transition" type="offlajnonoff" default="0" label="CSS3 transitions" description=""/>
    <param name="imageresize" type="offlajnonoff" default="0" label="Image resizer" description=""/>
  
    <param name="type" type="offlajnslidertype" default="accordionHorizontal" label="Slider Type" description="The type of the Slider"/>
  </params>
  <params addPath="/administrator/components/com_smartslider/params" group="generator">
  <param name="generator" type="offlajnslidegenerator" default="choose" label="Slide generator" description="Slidegenerator"/>
  </params>
</config>
